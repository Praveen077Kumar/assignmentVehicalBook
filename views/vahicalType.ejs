<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/wheelsNo.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <title>Vehicle Rental</title>
</head>

<body>
  <div class="container">
    <h2 class="main-heading">Types of Vehicle</h2>
   <form action="model" method="POST"> 
           <% if (prods.length > 0) { %>
           <div>
            <% for (let product of prods) { %>
            <input type="radio" id="vahicalType" name="model" value=<%=product %>  /> <%= product %>
            <br>
             <% } %>
           </div>
           <% } else { %>
                        <h1>No Products Found!</h1>
                  <% } %>
           <div class="pagination">
              <input class="btn" type="button" id="previousButton" value="Previous"> 
              <input type="submit" id="nextUser" value="Next" class="btn" disabled>
          </div> 
    </form>  
   
  </div>
</body>
  <script>
    $(document).ready(function () {
            $('form').on('input change', 'input', function () {
                var empty = false;
                $('form input').each(function () {
                    if ($(this).attr('type') === 'radio' && !$(`input[name="${$(this).attr('name')}"]:checked`).length) {
                        return;
                    }
                    if (!$(this).val()) {
                        empty = true;
                    }
                });
                if (empty) {
                    $('#nextUser').attr('disabled', 'disabled');
                } else {
                    $('#nextUser').removeAttr('disabled');
                }
            });
        });
</script>

  <script>
        $(document).ready(function () {
            $('#previousButton').on('click', function () {
                window.history.back();
            });
        });
    </script>
</html>